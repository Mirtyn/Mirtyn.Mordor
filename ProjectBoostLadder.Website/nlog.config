<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true">
	<targets>
		<target xsi:type="File" encoding="UTF-8" name="fileTarget" fileName="${basedir}/data/logs/${date:format=yyyyMMdd}.txt" layout="${longdate} ${uppercase:${level}} ${message} | ${exception:format=message}" />
		<target xsi:type="ColoredConsole" name="consoleTarget"  layout="${longdate} ${uppercase:${level}} ${message}" />
	</targets>
	<rules>
		<logger name="*" minlevel="Trace" writeTo="consoleTarget" />
		<logger name="Microsoft.*" maxlevel="Info" final="true" />
		<logger name="*" minlevel="Trace" writeTo="fileTarget" />
	</rules>
</nlog>